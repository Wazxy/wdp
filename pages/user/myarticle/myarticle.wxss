/* pages/user/myarticle/myarticle.wxss */
.container{
  height: 1500rpx;
  padding: 0;
  font-size: 14rpx;
  color: #000;
  background: #F6F6F6;
}
.main{
  position: relative; 
  z-index: 2; 
}
.line {
 width: 100%; 
 height: 1px; 
 background-color: #cccccc; 
 margin-top: 2px; 
} 
.list-item{
  padding: 20px 20px 20px 40px; 
  display: block; 
  font-size: 30rpx; 
  border-bottom: 10px solid #F6F6F6; 
  position: relative; 
  background-color: #ffffff;
  height: 150rpx;
}
.item-title{ 
  display: block;
  font-size: 40rpx;
  font-weight: 500; 
  line-height: 55rpx; 
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
}
.item-content{
  display: -webkit-box;
  font-size:28rpx;
  color:#000000;
  line-height: 40rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:3;
  overflow: hidden;
  text-overflow:ellipsis;
}