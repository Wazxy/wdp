/* pages/article/article.wxss */
.container{
  height: 1500rpx;
  padding: 0;
  font-size: 14rpx;
  color: #000;
  background: #F6F6F6;
}
.search{
  width: 735rpx;
  height: 65rpx;
  padding: 12.5rpx 0 12.5rpx 15rpx;
}
.search-ques{
  flex: 8;
  background: #ffffff;
  text-align: left;
}
.search-ques image{
  display: inline-block;
  width: 35rpx;
  height: 35rpx;
  padding: 15rpx 15rpx 15rpx 20rpx;
}
input{
  display: inline-block;
  height: 65rpx;
  font-size: 26rpx;
}
.search-placeholder{
  color: #818A8F;
  line-height: 20rpx;
}
.refresh{
  flex: 1;
}
.refresh image{
  width: 40rpx;
  height: 40rpx;
  padding: 15rpx;
}

.main{
  position: relative; 
  z-index: 2; 
}
.line {
 width: 100%; 
 height: 1px; 
 background-color: #cccccc; 
 margin-top: 2px; 
} 
.list-item{
  padding: 20px 20px 20px 40px; 
  display: block; 
  font-size: 30rpx; 
  border-bottom: 10px solid #F6F6F6; 
  position: relative; 
  background-color: #ffffff;
  height: 150rpx;
}
.item-title{ 
  display: block;
  font-size: 40rpx;
  font-weight: 500; 
  line-height: 55rpx; 
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
}
.item-content{
  display: -webkit-box;
  font-size:28rpx;
  color:#000000;
  line-height: 40rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:3;
  overflow: hidden;
  text-overflow:ellipsis;
}

.more{ 
  text-align: center; 
  font-size: 22rpx; 
  color:black; 
  margin-bottom: 30px; 
}
.more image{ 
  width: 80px; 
  height: 16px; 
  display: block; 
  margin: 0 auto;
}