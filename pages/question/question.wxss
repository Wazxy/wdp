/**index.wxss**/
.container{
  height: 1500rpx;
  padding: 0;
  font-size: 14rpx;
  color: #000;
}
.search{
  width: 735rpx;
  height: 65rpx;
  padding: 12.5rpx 0 12.5rpx 15rpx;
}
.search-ques{
  flex: 8;
  background: #ffffff;
  text-align: left;
}
.search-ques image{
  display: inline-block;
  width: 35rpx;
  height: 35rpx;
  padding: 15rpx 15rpx 15rpx 20rpx;
}
input{
  display: inline-block;
  height: 65rpx;
  font-size: 26rpx;
}
.search-placeholder{
  color: #818A8F;
  line-height: 20rpx;
}
.refresh{
  flex: 1;
}
.refresh image{
  width: 40rpx;
  height: 40rpx;
  padding: 15rpx;
}


